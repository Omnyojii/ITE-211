public class GradeBook {
    // public void displayMessage(String courseName) {
    //	System.out.printf("Welcome to your GradeBook for %s", courseName);
    //	
    // }
    
    //Constructor
    private String courseName; 
    
    //Declare Variable
    public void setCourseName(String name){
    	courseName=name;
    }
    
    //Return Value
    public String getCourseName(){
    	return courseName;
    }
    
    //DISPLAY
    public void displayMessage(){
    	System.out.printf("Welcome to the GradeBook for the %s!", getCourseName());
    }
     
    
}

