		TurtleGraphicsClass TurtleGraphics = new TurtleGraphicsClass();
		Scanner input = new Scanner(System.in);
		
		while(!userExit){
			int choice = displayMainMenu(); // return 1, 2, 3, 4
			
			switch(choice){
				// PEN UP
				case 1:
				
				// PEN DOWN
				case 2:
				
				// WALK RIGHT
				case 3:
				
				// WALK LEFT
				case 4:
				
				// WALK UP
				case 5:
				
				// WALK DOWN
				case 6:
				
				// DISPLAY ARRAY
				case 7:
				
				// SYSTEM EXIT	
				case 8:
					System.out.println("\nExiting the system...");
					userExit = true;
					System.out.println("\nThank you! Goodbye!");
					break;
				
				// INVALID INPUT
				default:
					System.out.println("\nYou did not enter a valid selection. Try Again.");
					break;	
				
			
			}// END SWITCH
		}// END WHILE
			
    
    
    
    
    
