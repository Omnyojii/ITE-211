#include<iostream>

using namespace std;

main(){
	const int MAX = 10;
	
	int total[MAX];
	int product[MAX];
	int amount[MAX];
	
	cout<<"Enter the amount and price: "<<endl;
	 
	for(int i=0; i<MAX; i++){
		cout<<"\nProduct["<<i<<"] = ";
		cin>>product[i];
		cout<<"Amount["<<i<<"] = ";
		cin>>amount[i];
		total[i] = product[i] * amount[i];
		cout<<"Total["<<i<<"] = "<<total[i]<<endl;
		//cout<<"\n";
	}	
	
	system("pause");
}
